<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="stylesheet" href="/style.css" />
    <title>Mini Whatsapp</title>
  </head>
  <body>
    <h1>All chats</h1>

    <div class="main">
      <form method="get" action="/new">
        <button>New chat</button>
      </form>
      <% chats.map((x)=>{ %>
      <div class="chats">
        <p class="title">From: <%= x.from %></p>
        <p class="title">To: <%= x.to %></p>
        <div class="msg">
          <p><%= x.msg %></p>
        </div>
        <p>Time: <%=x.created_at.toString().split(" ")[4]%></p>
        <p>
          Time: <%=x.created_at.toString().split(" ").slice(0,4).join(" ")%>
        </p>
        <a href="/<%=x.id%>/edit"><button>edit</button></a>
        <form
          method="POST"
          action="/<%=x.id%>/delete?_method=DELETE"
          style="display: inline"
        >
          <button type="submit">delete</button>
        </form>
      </div>
      <% }); %>
    </div>
  </body>
</html>
